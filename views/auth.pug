extends layout

block content
    h1= title
    p Welcome to #{title}
    form(action='/auth', method='post')
        div
            label(for='username') Username:
            input(type='text', name='username', id='username')
        div
            label(for='password') Password:
            input(type='password', name='password', id='password')
        div
            input(type='submit', value='Log In')
